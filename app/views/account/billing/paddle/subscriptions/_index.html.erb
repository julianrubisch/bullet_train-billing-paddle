<% team = @team %>
<% context ||= team %>
<% collection ||= :payments %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, payments = pagy_array(payments, page_param: :payments_page) unless pagy %>

<%= render 'account/shared/box', pagy: pagy do |box| %>
  <%# box.title t(".contexts.#{context.class.name.underscore}.header") %>
  <% box.description do %>
    <%#= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless payments.any?}") %>
    <%#= render "shared/limits/index", model: payments.model %>
  <% end %>

  <% box.table do %>
    <% if payments.any? %>
      <table class="table">
        <thead>
          <tr>
            <%= render "shared/tables/select_all" %>
            <th><%= t('.fields.title.heading') %></th>
            <%# ðŸš… super scaffolding will insert new field headers above this line. %>
            <th><%= t('.fields.amount.heading') %></th>
            <th><%= t('.fields.receipt_url.heading') %>
            <th><%= t('.fields.status.heading') %>
            <th><%= t('.fields.payout_date.heading') %>
            <th class="text-right"></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'payment', collection: payments %>
        </tbody>
      </table>
    <% end %>
  <% end %>

  <% box.actions do %>
    <% unless hide_actions %>
      <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
      <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>

      <% unless hide_back %>
        <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:payment)} back" %>
      <% end %>
    <% end %>
  <% end %>

  <% box.raw_footer do %>
    <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
  <% end %>
<% end %>
