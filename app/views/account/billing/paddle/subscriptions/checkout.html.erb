<script type="text/javascript">
  Paddle.Checkout.open({
    settings: {
      theme: "none",
      successUrl: "<%= polymorphic_url([:refresh, :account, @subscription]) %>",
    },
    items: [{
      priceId: "<%= @subscription.paddle_items.first[:plan] %>",
      quantity: <%= @subscription.paddle_items.first[:quantity] %>,
    }],
    customer: {
      email: "<%= current_membership.email %>",
    },
    customData: {
      subscription_id: "<%= @subscription.id %>"
    }
  });
</script>
